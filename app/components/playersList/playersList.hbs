<div class="playersList" data-action="playersList">
    <p>Total Players:
        <span id="total-players">0</span>
    </p>
    <div class="list-group" id="players-list-panel">
        {{#each this}}
        <a href="#" class="list-group-item d-flex justify-content-between align-items-center list-group-item-player" data-player-id="{{this._id}}">
            {{this.name}}
            <span class="badge badge-primary badge-pill">{{this.rating}}</span>
        </a>
        {{/each}}
    </div>
</div>